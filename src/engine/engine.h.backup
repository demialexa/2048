#ifndef _2048_ENGINE_ENGINE_H_
#define _2048_ENGINE_ENGINE_H_

#include "logic/logic.h"
#include "display/display.h"

class Engine {
 public:
  Engine(uint32_t length) : logic_(length), display_(), state_(States::kGame) {}
  void MainLoop();

 private:
  enum class States {
    kGame,
    kSuccess,
    kFail,
  };

  Keys GetPressedKey();
  void Move(Keys key);
  void Draw();
  void Turn(Keys &Key_pressed, uint32_t &old_time);

  Logic logic_;
  Display display_;
  States state_;
};

#endif
